<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StayCation</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./css/styles.css" asp-append-version="true">
</head>
<body>
    <header>
        <div class="logo">
            <h1><span>Stay</span>cation</h1>
        </div>
        <div class="menu">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a href="">Browse By</a>
            <a href="">Stories</a>
            <a href="">Agents</a>
            <a asp-controller="Client" asp-action="SignUp">Sign Up</a>
            <a asp-controller="Client" asp-action="SignIn">Sign In</a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-main">
            <div class="footer-main-1" style="width: 300px; margin-left: 100px;">
                <div class="footer-logo">
                    <h1><span>Stay</span>cation</h1>
                    <p>We kaboom your beauty holiday<br> instantly and memorable</p>
                </div>
            </div>
            <div class="footer-main-1">
                <p class="p1">For Beginners</p>
                <p class="p2" style="padding-top: 10px;">New Account</p>
                <p class="p2">Start Booking a Room</p>
                <p class="p2">Use Payments</p>
            </div>
            <div class="footer-main-1">
                <p class="p1">Explore Us</p>
                <p class="p2" style="padding-top: 10px;">Our Careers</p>
                <p class="p2">Privacy</p>
                <p class="p2">Terms and Conditions</p>
            </div>
            <div class="footer-main-1">
                <p class="p1">Connect Us</p>
                <p class="p2" style="padding-top: 10px;">support@staycation.id</p>
                <p class="p2">021-2208-1996</p>
                <p class="p2">Staycation, Kemang, Jakarta</p>
            </div>
            <div class="copy"><p>Copyright 2023 All Rights Reserved</p></div>
        </div>
    </footer>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - StayCation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
